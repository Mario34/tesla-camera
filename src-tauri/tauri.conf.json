{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm run build:tauri",
    "beforeDevCommand": "pnpm run dev",
    "devPath": "http://localhost:6680",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "teslacam-player",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["**"]
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all":true,
        "scope": ["**"]
      },
      "shell": {
        "all": true,
        "execute": false,
        "open": true,
        "scope": [
          { 
            "name": "binaries/ffmpeg",
            "sidecar": true,
            "args": true
          }
        ],
        "sidecar": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "binaries/ffmpeg"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "mario34.top",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "null"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "minWidth": 1440,
        "minHeight": 900,
        "resizable": true,
        "title": "TeslaCam"
      }
    ]
  }
}